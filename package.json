{
  "name": "turk-voc",
  "version": "0.0.1",
  "description": "dictionary ",
  "main": "./electron/dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "install-app-deps",
    "run": "export NODE_ENV=development && electron electron/dist/main.js",
    "electron": "export NODE_ENV=development && ng build --base-href ./ && tsc --p electron && electron electron/dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "<E. Bolshakov> <eugenner@gmail.com>",
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@ng-bootstrap/ng-bootstrap": "^10.0.0",
    "bootstrap": "^5.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~6.6.0",
    "sequelize": "^6.18.0",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.9",
    "@angular/cli": "~12.2.9",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "electron": "^18.0.1",
    "electron-builder": "^22.14.13",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.5"
  },
  "build": {
    "appId": "com.cosmoplan.app",
    "productName": "TurkVoc",
    "copyright": "Copyright Â© TurkVoc",
    "directories": {
      "output": "release/"
    },
    "files": [
      "!./electron/turkvoc.sqlite3",
      "!dictionary_resources${/*}",
      "!src${/*}"
    ],
    "extraResources": [
      {
        "from": "./electron/turkvoc.sqlite3",
        "to": "turkvoc.sqlite3"
      },
      {
        "from": "./electron/about.html",
        "to": "./"
      },
      {
        "from": "./electron/help.html",
        "to": "./"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
